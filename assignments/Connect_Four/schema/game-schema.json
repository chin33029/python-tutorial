{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Game",
    "type": "object",

    "properties": {
        
        "message": {
            "type": "string"
        },
        "winner": {
            "type": "string"
        },
        "player_red": {
            "type": "number"
        },
        "player_yellow": {
            "type": "number"
        },
        "board": {
            "type": "array"
        },
        "playerUp": {
            "type": "string"
        },
        "status": {
            "type": "string",
            "enum": ["NOT_STARTED", "WIN", "TIE", "IN_ACTION"]
        }

    },
    "required": ["winner"]
    
}